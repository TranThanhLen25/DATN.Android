<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/btn_AddItemMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:src="@drawable/ic_add"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/DetailMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            app:layout_constraintStart_toEndOf="@+id/btn_AddItemMenu"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_tenmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giặt ủi"
                android:textSize="@dimen/textview_tk_mk"
                app:layout_constraintStart_toStartOf="@+id/DetailMenu"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_giamenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.000đ "
                android:textSize="@dimen/textview_tk_mk"
                app:layout_constraintStart_toStartOf="@+id/DetailMenu"
                app:layout_constraintTop_toBottomOf="@+id/tv_tenmenu" />

            <TextView
                android:id="@+id/tv_soluongmenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x2"
                android:textSize="@dimen/textview_tk_mk"
                app:layout_constraintStart_toEndOf="@+id/tv_giamenu"
                app:layout_constraintTop_toBottomOf="@+id/tv_tenmenu" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/PriceMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/DetailMenu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_MinusItemMenu">

            <TextView
                android:id="@+id/tv_Price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="bottom|end"
                android:text="200.000đ"
                android:textSize="@dimen/textview_tk_mk"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageButton
            android:id="@+id/btn_MinusItemMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="5dp"
            android:src="@drawable/ic_minus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>