<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.phieuxuat.PhieuTraBanActivity">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_phieutraban"
        layout="@layout/activity_appar_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scr_phieutraban"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="9dp"


        app:layout_constraintBottom_toTopOf="@+id/ctl_btn_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_phieutraban">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/phieutraban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headderphieutraban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/phieutraban"
                app:layout_constraintStart_toStartOf="@id/phieutraban"
                app:layout_constraintTop_toTopOf="@+id/phieutraban">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chitietheaderphieutraban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/headderphieutraban"
                    app:layout_constraintTop_toTopOf="@+id/headderphieutraban">

                    <TextView
                        android:id="@+id/tv_phieutraban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tenphieu"
                        android:padding="10dp"
                        android:text="Phiếu trả bàn chi tiết"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/chitietheaderphieutraban"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderphieutraban" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tv_ban_phieutraban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/chitietheaderphieutraban"
                        app:layout_constraintTop_toBottomOf="@id/tv_phieutraban">

                        <TextView
                            android:id="@+id/tv_ban"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Bàn: "
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"

                            app:layout_constraintStart_toStartOf="@id/tv_ban_phieutraban"
                            app:layout_constraintTop_toTopOf="@id/tv_ban_phieutraban" />

                        <TextView
                            android:id="@+id/tv_ban_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="PX1"
                            android:textColor="@color/red"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/tv_ban"

                            app:layout_constraintTop_toTopOf="@id/tv_ban_phieutraban" />



                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainphieutraban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/phieutraban"
                app:layout_constraintStart_toStartOf="@id/phieutraban"
                app:layout_constraintTop_toBottomOf="@id/headderphieutraban">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctv_input_phieutraban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainphieutraban"
                    app:layout_constraintTop_toTopOf="@+id/mainphieutraban">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_tenkh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/ctv_input_phieutraban"
                        app:layout_constraintTop_toBottomOf="@id/tv_ban_phieutraban"
                        tools:ignore="NotSibling">

                        <TextView
                            android:id="@+id/tv_hoten"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/tv_hoten"
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"
                            app:layout_constraintStart_toStartOf="@+id/ctl_tenkh"
                            app:layout_constraintTop_toTopOf="@+id/ctl_tenkh" />

                        <TextView
                            android:id="@+id/tv_hoten_ptp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="TenKhachHnag"
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"
                            app:layout_constraintBottom_toBottomOf="parent"

                            app:layout_constraintStart_toEndOf="@id/tv_hoten"
                            app:layout_constraintTop_toTopOf="@id/ctl_tenkh"
                            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_cccd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:layout_constraintStart_toStartOf="@id/ctv_input_phieutraban"
                        app:layout_constraintTop_toBottomOf="@+id/ctl_tenkh">

                        <TextView
                            android:id="@+id/tv_cccd_phieutraban"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/tv_cccd"
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"
                            app:layout_constraintStart_toStartOf="@id/ctl_cccd"
                            app:layout_constraintTop_toTopOf="@id/ctl_cccd"

                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/tv_cccd_ptp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="000000000000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"
                            app:layout_constraintStart_toEndOf="@id/tv_cccd_phieutraban"

                            app:layout_constraintTop_toTopOf="@id/ctl_cccd"

                            tools:ignore="MissingConstraints,SpeakableTextPresentCheck" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_sdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        app:layout_constraintStart_toStartOf="@id/ctv_input_phieutraban"
                        app:layout_constraintTop_toBottomOf="@id/ctl_cccd">

                        <TextView
                            android:id="@+id/tv_sdt_tieude"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SDT: "
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"
                            app:layout_constraintStart_toStartOf="@id/ctl_sdt"
                            app:layout_constraintTop_toTopOf="@id/ctl_sdt" />

                        <TextView
                            android:id="@+id/tv_sdtptp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="4110000000"
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"
                            app:layout_constraintStart_toEndOf="@id/tv_sdt_tieude"
                            app:layout_constraintTop_toTopOf="@id/ctl_sdt" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_ngaynhan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_item"
                        android:padding="5dp"
                        app:layout_constraintStart_toStartOf="@+id/ctv_input_phieutraban"
                        app:layout_constraintTop_toBottomOf="@id/ctl_sdt">

                        <TextView
                            android:id="@+id/tv_nhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Ngày:  "
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"
                            app:layout_constraintStart_toStartOf="@id/ctl_ngaynhan"
                            app:layout_constraintTop_toTopOf="@id/ctl_ngaynhan"
                            tools:ignore="MissingConstraints" />

                        <TextView
                            android:id="@+id/tv_ngaynhan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0101010101"
                            android:textColor="@color/black"
                            android:textSize="@dimen/heading_2"

                            app:layout_constraintStart_toEndOf="@id/tv_nhan"
                            app:layout_constraintTop_toTopOf="@id/ctl_ngaynhan"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>





                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/black"
                        app:layout_constraintStart_toStartOf="@id/ctv_input_phieutraban"
                        app:layout_constraintTop_toBottomOf="@id/ctl_ngaynhan" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctl_sd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintStart_toStartOf="@id/ctv_input_phieutraban"
                        app:layout_constraintTop_toBottomOf="@id/view"
                        app:layout_constraintBottom_toBottomOf="@id/rscv_sudung"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rscv_sudung"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="@id/ctl_sd"
                            app:layout_constraintTop_toTopOf="@id/ctl_sd" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_btn_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:id="@+id/view_btn"
            app:layout_constraintStart_toStartOf="@id/ctl_btn_bottom"
            app:layout_constraintTop_toTopOf="@id/ctl_btn_bottom" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/ctl_btn_bottom"
            app:layout_constraintTop_toTopOf="@id/ctl_btn_bottom"
            app:layout_constraintStart_toStartOf="@id/ctl_btn_bottom"
            tools:ignore="ExtraText">

            <TextView
                android:id="@+id/tong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Tổng: "
                android:textColor="@color/black"
                android:textSize="@dimen/heading_2"
                app:layout_constraintBottom_toBottomOf="@id/ctl_button"
                app:layout_constraintStart_toStartOf="@id/ctl_button"
                app:layout_constraintTop_toTopOf="@id/ctl_button" />

            <TextView
                android:id="@+id/tv_tongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123000"
                android:textColor="@color/red"
                android:textSize="@dimen/heading_2"
                app:layout_constraintBottom_toBottomOf="@id/ctl_button"
                app:layout_constraintStart_toEndOf="@id/tong"
                app:layout_constraintTop_toTopOf="@id/ctl_button"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_traban"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="7dp"

            android:padding="10dp"
            android:text="Thanh toán"
            android:textAllCaps="false"
            android:textSize="@dimen/heading_2"
            app:layout_constraintBottom_toBottomOf="@id/ctl_btn_bottom"
            app:layout_constraintEnd_toEndOf="@id/ctl_btn_bottom"
            app:layout_constraintTop_toTopOf="@id/ctl_btn_bottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>