<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_thongtincanhan">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_thongtincanhan"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/nen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_thongtincanhan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/man"
            app:layout_constraintStart_toStartOf="@id/ctl_thongtincanhan"
            app:layout_constraintTop_toTopOf="@id/ctl_thongtincanhan">

        </ImageView>

        <TextView
            android:id="@+id/tv_ten_thongticanhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Tran Thanh Len"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_1"
            app:layout_constraintEnd_toEndOf="@id/ctl_thongtincanhan"
            app:layout_constraintStart_toEndOf="@id/img_thongtincanhan"

            app:layout_constraintTop_toTopOf="@id/ctl_thongtincanhan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="nhan vien le tan"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/ctl_thongtincanhan"
            app:layout_constraintStart_toEndOf="@+id/img_thongtincanhan"


            app:layout_constraintTop_toTopOf="@id/tv_ten_thongticanhan"
            tools:ignore="TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view_thongtincanhan"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bluenhat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_thongtincanhan">

    </View>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_thongtin"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_thongtincanhan">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_taikhoan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ctl_thongtin"
            app:layout_constraintStart_toStartOf="@id/ctl_thongtin"
            app:layout_constraintTop_toTopOf="@id/ctl_thongtin">

            <TextView
                android:id="@+id/tv_tk"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/tv_tai_khoan"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/ctl_taikhoan"
                app:layout_constraintStart_toStartOf="@id/ctl_taikhoan"
                app:layout_constraintTop_toTopOf="@id/ctl_taikhoan">

            </TextView>

            <TextView
                android:id="@+id/tv_tentk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="thanhlen25"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/tv_tk"
                app:layout_constraintTop_toTopOf="@id/ctl_taikhoan" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_sodienthoai"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ctl_thongtin"
            app:layout_constraintStart_toStartOf="@id/ctl_thongtin"
            app:layout_constraintTop_toBottomOf="@id/ctl_taikhoan">

            <TextView
                android:id="@+id/tv_sdt"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/tv_so_dien_thoai"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/ctl_sodienthoai"
                app:layout_constraintStart_toStartOf="@id/ctl_sodienthoai"
                app:layout_constraintTop_toTopOf="@id/ctl_sodienthoai">

            </TextView>

            <!--            <TextView-->
            <!--                android:id="@+id/tv_sdtnumber"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="15dp"-->
            <!--                android:text="0923645773"-->
            <!--                android:textSize="18dp"-->
            <!--                app:layout_constraintStart_toEndOf="@id/tv_sdt"-->
            <!--                app:layout_constraintTop_toTopOf="@id/ctl_sodienthoai" />-->
            <EditText
                android:id="@+id/et_sdt_chinhsuathogtincanhan"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:autofillHints=""
                android:background="@drawable/bg_edittext"
                android:inputType="textPersonName"
                app:layout_constraintStart_toEndOf="@id/tv_sdt"
                app:layout_constraintTop_toTopOf="@id/ctl_sodienthoai"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_quequan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ctl_thongtin"
            app:layout_constraintStart_toStartOf="@id/ctl_thongtin"
            app:layout_constraintTop_toBottomOf="@id/ctl_sodienthoai">

            <TextView
                android:id="@+id/tv_quequan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/tv_que_quan"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/ctl_quequan"
                app:layout_constraintStart_toStartOf="@id/ctl_quequan"
                app:layout_constraintTop_toTopOf="@id/ctl_quequan">

            </TextView>

            <!--            <TextView-->
            <!--                android:id="@+id/tv_qq"-->
            <!--                android:layout_width="0dp"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="15dp"-->
            <!--                android:text="Thành Phố hồ Chí Minh"-->
            <!--                android:textSize="18dp"-->
            <!--                app:layout_constraintStart_toEndOf="@id/tv_quequan"-->
            <!--                app:layout_constraintTop_toTopOf="@id/ctl_quequan" />-->
            <EditText
                android:id="@+id/et_quequan_chinhsuathongtincanhan"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:autofillHints=""
                android:background="@drawable/bg_edittext"
                android:inputType="textPersonName"
                app:layout_constraintStart_toEndOf="@id/tv_quequan"
                app:layout_constraintTop_toTopOf="@id/ctl_quequan"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_gioitinh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ctl_thongtin"
            app:layout_constraintStart_toStartOf="@id/ctl_thongtin"
            app:layout_constraintTop_toBottomOf="@id/ctl_quequan">

            <TextView
                android:id="@+id/tv_gioitinh"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/tv_gioi_tinh"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/ctl_gioitinh"
                app:layout_constraintStart_toStartOf="@id/ctl_gioitinh"
                app:layout_constraintTop_toTopOf="@id/ctl_gioitinh">

            </TextView>

            <TextView
                android:id="@+id/tv_gt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Nam"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/tv_gioitinh"
                app:layout_constraintTop_toTopOf="@id/ctl_gioitinh" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_cancuoccongdan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ctl_thongtin"
            app:layout_constraintStart_toStartOf="@id/ctl_thongtin"
            app:layout_constraintTop_toBottomOf="@id/ctl_gioitinh">

            <TextView
                android:id="@+id/tv_cancuoccongdan"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/tv_can_cuoc_cong_dan"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/ctl_cancuoccongdan"
                app:layout_constraintStart_toStartOf="@id/ctl_cancuoccongdan"
                app:layout_constraintTop_toTopOf="@id/ctl_cancuoccongdan">

            </TextView>

            <TextView
                android:id="@+id/tv_cccd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="321820199"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/tv_cancuoccongdan"
                app:layout_constraintTop_toTopOf="@id/ctl_cancuoccongdan" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_chucvu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/ctl_thongtin"
            app:layout_constraintStart_toStartOf="@id/ctl_thongtin"
            app:layout_constraintTop_toBottomOf="@id/ctl_cancuoccongdan">

            <TextView
                android:id="@+id/tv_chucvu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:text="@string/tv_chuc_vu"
                android:textColor="@color/black"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@id/ctl_chucvu"
                app:layout_constraintStart_toStartOf="@id/ctl_chucvu"
                app:layout_constraintTop_toTopOf="@id/ctl_chucvu">

            </TextView>

            <TextView
                android:id="@+id/tv_cv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Nhân viên lễ tân"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@id/tv_chucvu"
                app:layout_constraintTop_toTopOf="@id/ctl_chucvu" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_btn_thongtincanhan"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_thongtin">

        <Button
            android:id="@+id/btn_suathongtincanhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/btn_sua_thongtincanhan"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/ctl_btn_thongtincanhan"
            app:layout_constraintEnd_toStartOf="@id/btn_doimatkhau"
            app:layout_constraintStart_toStartOf="@id/ctl_btn_thongtincanhan"
            app:layout_constraintTop_toTopOf="@id/ctl_btn_thongtincanhan" />

        <Button
            android:id="@+id/btn_doimatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/btn_doi_mat_khau"
            android:textAllCaps="false"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@id/ctl_btn_thongtincanhan"
            app:layout_constraintEnd_toEndOf="@id/ctl_btn_thongtincanhan"
            app:layout_constraintStart_toEndOf="@id/btn_suathongtincanhan"
            app:layout_constraintTop_toTopOf="@id/ctl_btn_thongtincanhan" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>