<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment_nhaphang">



    <ScrollView
        android:id="@+id/scr_phieunhaphang"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ctl_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--        app:layout_constraintBottom_toTopOf="@+id/footer_phieudatphong"-->


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_phieunhaphang"
            android:layout_width="match_parent"
            android:layout_height="0dp"


            app:layout_constraintBottom_toTopOf="@+id/bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scr_phieunhaphang"
            tools:ignore="ExtraText">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_pdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tenphieu"
                android:padding="10dp"
                android:text="@string/tv_phieunhaphang"
                android:textSize="@dimen/heading_2"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/ctl_phieunhaphang"
                app:layout_constraintTop_toTopOf="@id/ctl_phieunhaphang"></TextView>

            <TextView
                android:id="@+id/tv_ngay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="25/02/2023"
                android:textSize="@dimen/heading_2"
                app:layout_constraintStart_toStartOf="@id/ctl_phieunhaphang"
                app:layout_constraintTop_toBottomOf="@id/tv_pdp"></TextView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctl_sct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/ctl_phieunhaphang"
                app:layout_constraintTop_toBottomOf="@id/tv_ngay">

                <TextView
                    android:id="@+id/tv_sct_pnh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_sochungtu"
                    android:textColor="@color/red"
                    android:textSize="@dimen/heading_2"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints"></TextView>

                <TextView
                    android:id="@+id/tv_ma_sct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="ABC"
                    android:textColor="@color/red"
                    android:textSize="@dimen/heading_2"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/ctl_sct"
                    app:layout_constraintStart_toEndOf="@id/tv_sct_pnh"
                    app:layout_constraintTop_toTopOf="@id/ctl_sct" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctl_tenncc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@id/scr_phieunhaphang"
                app:layout_constraintTop_toBottomOf="@id/ctl_sct"
                tools:ignore="NotSibling">

                <TextView
                    android:id="@+id/tv_tenncc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tv_ncc"
                    android:textSize="@dimen/heading_2"
                    app:layout_constraintBottom_toBottomOf="@id/ctl_tenncc"
                    app:layout_constraintStart_toStartOf="@id/ctl_tenncc"
                    app:layout_constraintTop_toTopOf="@id/ctl_tenncc"
                    tools:ignore="MissingConstraints">

                </TextView>

                <EditText
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edittext"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="@id/ctl_tenncc"
                    app:layout_constraintEnd_toEndOf="@id/ctl_tenncc"

                    app:layout_constraintTop_toTopOf="@id/ctl_tenncc"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck">

                </EditText>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@id/ctl_tenncc"></View>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rscv_phieunhap"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view" />

            <ImageButton
                android:id="@+id/btn_them_sanpham"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@color/white"
                android:src="@drawable/ic_plusvip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rscv_phieunhap"




                tools:ignore="MissingConstraints,SpeakableTextPresentCheck">

            </ImageButton>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_bottom"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="NotSibling">

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/ctl_bottom"></View>

        <TextView
            android:id="@+id/tv_tong_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="@string/tv_tong"
            android:textSize="@dimen/heading_2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ctl_bottom"
            app:layout_constraintStart_toStartOf="@id/ctl_bottom"
            app:layout_constraintTop_toTopOf="@id/ctl_bottom">

        </TextView>

        <TextView
            android:id="@+id/tv_tong_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="ABCEFGHT"
            android:textColor="@color/red"
            android:textSize="@dimen/heading_2"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/ctl_bottom"
            app:layout_constraintStart_toEndOf="@id/tv_tong_"
            app:layout_constraintTop_toTopOf="@id/ctl_bottom">

        </TextView>

        <Button
            android:id="@+id/btn_xacnhan_phieunhaphang"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/bluenhat"
            android:text="@string/btn_xacnhan"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@id/ctl_bottom"
            app:layout_constraintEnd_toEndOf="@id/ctl_bottom"
            app:layout_constraintTop_toTopOf="@id/ctl_bottom"
            tools:ignore="TextSizeCheck" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


