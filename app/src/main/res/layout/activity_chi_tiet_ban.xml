<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_ChiTietBan">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_chitietban"
        layout="@layout/activity_appar_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scr_chitietban"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/footer_chitietban"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_chitietban">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chitietban"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scr_chitietban">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headderchitietban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/chitietban"
                app:layout_constraintStart_toStartOf="@id/chitietban"
                app:layout_constraintTop_toTopOf="@+id/chitietban">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chitietheaderchitietban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/headderchitietban"
                    app:layout_constraintTop_toTopOf="@+id/headderchitietban">

                    <TextView
                        android:id="@+id/tv_chitietban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tenphieu"
                        android:padding="10dp"
                        android:text="Chi tiết bàn"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderchitietban" />

                    <TextView
                        android:id="@+id/tv_soban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Số bàn"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/tv_chitietban"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderchitietban"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="101"
                        android:id="@+id/tv_so"
                        android:textColor="@color/red"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/tv_soban"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderchitietban"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tv_sochungtu_chitietban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/chitietheaderchitietban"
                        app:layout_constraintTop_toBottomOf="@id/tv_chitietban">

                        <TextView
                            android:id="@+id/tv_sochungtu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/tv_gia"
                            android:textSize="@dimen/heading_2"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tv_sochungtu_chitietban"
                            app:layout_constraintTop_toTopOf="@id/tv_sochungtu_chitietban"/>

                        <TextView
                            android:id="@+id/tv_giachitiet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="300.000đ"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/tv_loaiban"
                            app:layout_constraintTop_toTopOf="@id/tv_sochungtu_chitietban"/>

                        <TextView
                            android:id="@+id/tv_loaiban"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="Loại Bàn:"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@+id/tv_sochungtu_chitietban"
                            app:layout_constraintTop_toBottomOf="@+id/tv_sochungtu"/>

                        <TextView
                            android:id="@+id/tv_loaibanchitiet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="PDP1"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/tv_loaiban"
                            app:layout_constraintTop_toBottomOf="@+id/tv_giachitiet"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainchitietban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/chitietban"
                app:layout_constraintStart_toStartOf="@id/chitietban"
                app:layout_constraintTop_toBottomOf="@id/headderchitietban">

                <TextView
                    android:id="@+id/tv_hoten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_hoten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"
                    app:layout_constraintTop_toTopOf="@+id/mainchitietban"/>

                <EditText
                    android:id="@+id/et_hoten_chitietban"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hoten"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tv_cccd_chitietban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_ghichu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"
                    app:layout_constraintTop_toBottomOf="@+id/et_hoten_chitietban"/>

                <EditText
                    android:id="@+id/et_ghichu_chitietban"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cccd_chitietban"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tv_csvc_chitietban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_csvc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    android:visibility="invisible"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"
                    app:layout_constraintTop_toBottomOf="@+id/et_ghichu_chitietban"/>

                <TextView
                    android:id="@+id/tv_csvc_data_chitietban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:visibility="invisible"
                    android:text="máy lạnh, tủ lạnh,..."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    app:layout_constraintStart_toEndOf="@+id/tv_csvc_chitietban"
                    app:layout_constraintTop_toBottomOf="@+id/et_ghichu_chitietban"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_gachngang_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"
                    app:layout_constraintTop_toBottomOf="@+id/tv_csvc_data_chitietban">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/grey"
                        app:layout_constraintTop_toTopOf="@+id/layout_gachngang_1"></View>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/additem_dichvu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"
                    app:layout_constraintTop_toBottomOf="@id/layout_gachngang_1">

                    <ImageButton
                        android:id="@+id/img_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:contentDescription="themban"
                        android:padding="15dp"
                        android:src="@drawable/ic_additem"
                        app:layout_constraintStart_toStartOf="@id/additem_dichvu"
                        app:layout_constraintTop_toTopOf="@+id/additem_dichvu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/tv_menu"
                        android:textSize="@dimen/textview_tk_mk"
                        app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                        app:layout_constraintStart_toEndOf="@+id/img_menu"
                        app:layout_constraintTop_toTopOf="@+id/additem_dichvu"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_gachngang_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"
                    app:layout_constraintTop_toBottomOf="@+id/additem_dichvu">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/grey"
                        app:layout_constraintTop_toTopOf="@+id/layout_gachngang_2"></View>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--                <androidx.constraintlayout.widget.ConstraintLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"-->
                <!--                    app:layout_constraintTop_toBottomOf="@+id/layout_gachngang_2">-->

                <!--                    <androidx.recyclerview.widget.RecyclerView-->
                <!--                        android:id="@+id/rscv_dichvu"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        app:layout_constraintStart_toStartOf="parent"-->
                <!--                        app:layout_constraintTop_toTopOf="parent" />-->
                <!--                </androidx.constraintlayout.widget.ConstraintLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietban"
                    app:layout_constraintTop_toBottomOf="@+id/layout_gachngang_2">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rscv_dichvu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_chitietban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nhahang_khachsan"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_tongtien_chitietban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_tong"
            android:textColor="@color/red"
            android:textSize="@dimen/heading_2"
            android:textStyle="bold"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/footer_chitietban"
            app:layout_constraintStart_toStartOf="@+id/footer_chitietban"/>
        <TextView
            android:id="@+id/tv_tongtien_data_chitietban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500.000đ"
            android:visibility="invisible"
            android:textSize="@dimen/heading_2"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/footer_chitietban"
            app:layout_constraintStart_toEndOf="@+id/tv_tongtien_chitietban"/>

        <Button
            android:id="@+id/btn_luu_chitietban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_luu"
            app:layout_constraintBottom_toBottomOf="@+id/footer_chitietban"
            app:layout_constraintEnd_toEndOf="@+id/footer_chitietban"
            app:layout_constraintTop_toTopOf="@+id/footer_chitietban"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>