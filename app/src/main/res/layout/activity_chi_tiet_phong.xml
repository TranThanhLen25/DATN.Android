<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chitietphong.ChiTietPhongActivity">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_chitietphong"
        layout="@layout/activity_appar_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scr_chitietphong"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingTop="2dp"
        app:layout_constraintBottom_toTopOf="@+id/footer_chitietphong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_chitietphong">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chitietphong"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scr_chitietphong">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headderchitietphong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/chitietphong"
                app:layout_constraintStart_toStartOf="@id/chitietphong"
                app:layout_constraintTop_toTopOf="@+id/chitietphong">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chitietheaderchitietphong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/headderchitietphong"
                    app:layout_constraintTop_toTopOf="@+id/headderchitietphong">

                    <TextView
                        android:id="@+id/tv_chitietphong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tenphieu"
                        android:padding="10dp"
                        android:text="@string/tv_chitietphong"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderchitietphong" />

                    <TextView
                        android:id="@+id/tv_sophong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="@string/tv_sophong"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@id/tv_chitietphong"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderchitietphong"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="101"
                        android:id="@+id/tv_so"
                        android:textColor="@color/red"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/tv_sophong"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderchitietphong"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tv_sochungtu_chitietphong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/chitietheaderchitietphong"
                        app:layout_constraintTop_toBottomOf="@id/tv_chitietphong">

                        <TextView
                            android:id="@+id/tv_sochungtu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/tv_gia"
                            android:textSize="@dimen/heading_2"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tv_sochungtu_chitietphong"
                            app:layout_constraintTop_toTopOf="@id/tv_sochungtu_chitietphong"/>

                        <TextView
                            android:id="@+id/tv_giachitiet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="300.000đ"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/tv_loaiphong"
                            app:layout_constraintTop_toTopOf="@id/tv_sochungtu_chitietphong"/>

                        <TextView
                            android:id="@+id/tv_loaiphong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/tv_loaiphong"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="@+id/tv_sochungtu_chitietphong"
                            app:layout_constraintTop_toBottomOf="@+id/tv_sochungtu"/>

                        <TextView
                            android:id="@+id/tv_loaiphongchitiet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="PDP1"
                            android:layout_marginStart="18dp"
                            android:textColor="@color/red"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/tv_loaiphong"
                            app:layout_constraintTop_toBottomOf="@+id/tv_giachitiet"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainchitietphong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/chitietphong"
                app:layout_constraintStart_toStartOf="@id/chitietphong"
                app:layout_constraintTop_toBottomOf="@id/headderchitietphong">

                <TextView
                    android:id="@+id/tv_hoten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_hoten"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"
                    app:layout_constraintTop_toTopOf="@+id/mainchitietphong"/>

                <EditText
                    android:id="@+id/et_hoten_chitietphong"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hoten"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tv_cccd_chitietphong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_ghichu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"
                    app:layout_constraintTop_toBottomOf="@+id/et_hoten_chitietphong"/>

                <EditText
                    android:id="@+id/et_ghichu_chitietphong"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cccd_chitietphong"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/tv_csvc_chitietphong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:visibility="invisible"
                    android:text="@string/tv_csvc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"
                    app:layout_constraintTop_toBottomOf="@+id/et_ghichu_chitietphong"/>

                <TextView
                    android:id="@+id/tv_csvc_data_chitietphong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:visibility="invisible"
                    android:text="máy lạnh, tủ lạnh,..."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textview_tk_mk"
                    app:layout_constraintStart_toEndOf="@+id/tv_csvc_chitietphong"
                    app:layout_constraintTop_toBottomOf="@+id/et_ghichu_chitietphong"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_gachngang_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"
                    app:layout_constraintTop_toBottomOf="@+id/tv_csvc_data_chitietphong">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/grey"
                        app:layout_constraintTop_toTopOf="@+id/layout_gachngang_1"></View>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/additem_dichvu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"
                    app:layout_constraintTop_toBottomOf="@id/layout_gachngang_1">

                    <ImageButton
                        android:id="@+id/img_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:contentDescription="themphong"
                        android:padding="15dp"
                        android:src="@drawable/ic_additem"
                        app:layout_constraintStart_toStartOf="@id/additem_dichvu"
                        app:layout_constraintTop_toTopOf="@+id/additem_dichvu" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="@string/tv_menu"
                        android:textSize="@dimen/textview_tk_mk"
                        app:layout_constraintBottom_toBottomOf="@+id/img_menu"
                        app:layout_constraintStart_toEndOf="@+id/img_menu"
                        app:layout_constraintTop_toTopOf="@+id/additem_dichvu"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_gachngang_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"
                    app:layout_constraintTop_toBottomOf="@+id/additem_dichvu">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/grey"
                        app:layout_constraintTop_toTopOf="@+id/layout_gachngang_2"></View>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--                <androidx.constraintlayout.widget.ConstraintLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"-->
                <!--                    app:layout_constraintTop_toBottomOf="@+id/layout_gachngang_2">-->

                <!--                    <androidx.recyclerview.widget.RecyclerView-->
                <!--                        android:id="@+id/rscv_dichvu"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        app:layout_constraintStart_toStartOf="parent"-->
                <!--                        app:layout_constraintTop_toTopOf="parent" />-->
                <!--                </androidx.constraintlayout.widget.ConstraintLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="@+id/mainchitietphong"
                    app:layout_constraintTop_toBottomOf="@+id/layout_gachngang_2">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rscv_dichvu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_chitietphong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nhahang_khachsan"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_tongtien_chitietphong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_tong"
            android:textColor="@color/red"
            android:visibility="invisible"
            android:textSize="@dimen/heading_2"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/footer_chitietphong"
            app:layout_constraintStart_toStartOf="@+id/footer_chitietphong"/>
        <TextView
            android:id="@+id/tv_tongtien_data_chitietphong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="500.000đ"
            android:textSize="@dimen/heading_2"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/footer_chitietphong"
            app:layout_constraintStart_toEndOf="@+id/tv_tongtien_chitietphong"/>

        <Button
            android:id="@+id/btn_luu_chitietphong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_luu"
            app:layout_constraintBottom_toBottomOf="@+id/footer_chitietphong"
            app:layout_constraintEnd_toEndOf="@+id/footer_chitietphong"
            app:layout_constraintTop_toTopOf="@+id/footer_chitietphong"/>

        <Button
            android:id="@+id/btn_baotri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bảo trì"
            android:backgroundTint="#C5732C"
            app:layout_constraintBottom_toBottomOf="@+id/footer_chitietphong"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/footer_chitietphong"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>