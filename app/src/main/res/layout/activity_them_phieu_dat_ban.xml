<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_them_phieu_dat_ban">

    <include
        android:id="@+id/toolbar_phieudatban"
        layout="@layout/activity_appar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scr_phieudatban"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/footer_phieudatban"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_phieudatban">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/phieudatban"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="10dp"

            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scr_phieudatban">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headderphieudatban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/phieudatban"
                app:layout_constraintStart_toStartOf="@id/phieudatban"
                app:layout_constraintTop_toTopOf="@+id/phieudatban">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chitietheaderphieudatban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/headderphieudatban"
                    app:layout_constraintTop_toTopOf="@+id/headderphieudatban">

                    <TextView
                        android:id="@+id/tv_phieudatban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tenphieu"
                        android:padding="10dp"
                        android:text="Phiếu đặt bàn"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/chitietheaderphieudatban"
                        app:layout_constraintTop_toTopOf="@id/chitietheaderphieudatban" />


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/tv_sochungtu_phieudatban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/chitietheaderphieudatban"
                        app:layout_constraintTop_toBottomOf="@id/tv_phieudatban">

                        <TextView
                            android:id="@+id/tv_sochungtu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/tv_sochungtu"
                            android:textColor="@color/red"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/tv_sochungtu_phieudatban"
                            app:layout_constraintTop_toTopOf="@id/tv_sochungtu_phieudatban" />

                        <TextView
                            android:id="@+id/tv_sochungtu_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/tv_PDP1"
                            android:textColor="@color/red"
                            android:textSize="@dimen/heading_2"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/tv_sochungtu"
                            app:layout_constraintTop_toTopOf="@id/tv_sochungtu_phieudatban" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageButton
                    android:id="@+id/BtnScanQR_phieudatban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="@color/white"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_qrcode"
                    app:layout_constraintEnd_toEndOf="@id/headderphieudatban"
                    app:layout_constraintStart_toEndOf="@id/chitietheaderphieudatban"
                    app:layout_constraintTop_toTopOf="@id/headderphieudatban" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainphieudatban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/phieudatban"
                app:layout_constraintStart_toStartOf="@id/phieudatban"
                app:layout_constraintTop_toBottomOf="@id/headderphieudatban">

                <TextView
                    android:id="@+id/tv_hoten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_hoten"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
                    app:layout_constraintTop_toTopOf="@+id/mainphieudatban" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_hoten_phieudatban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hoten">

                    <EditText
                        android:id="@+id/et_hoten_phieudatban"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="0dp"
                        app:layout_constraintTop_toTopOf="parent" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_cccd_phieudatban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_cccd"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
                    app:layout_constraintTop_toBottomOf="@+id/inputlayout_hoten_phieudatban" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_cccd_phieudatban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:counterEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:counterMaxLength="12"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cccd_phieudatban">

                    <EditText
                        android:id="@+id/et_cccd_phieudatban"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="0dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:maxLength="12"
                        app:layout_constraintTop_toTopOf="parent" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_sdt_phieudatban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_sdt"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
                    app:layout_constraintTop_toBottomOf="@+id/inputlayout_cccd_phieudatban" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_sdt_phieudatban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sdt_phieudatban">

                    <EditText
                        android:id="@+id/et_sdt_phieudatban"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="phone"
                        android:padding="0dp"
                        android:maxLength="10"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:layout_editor_absoluteX="0dp" />
                </com.google.android.material.textfield.TextInputLayout>

