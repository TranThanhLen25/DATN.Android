                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_phieudatban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nhahang_khachsan"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_themphieudatban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_datban"
            app:layout_constraintBottom_toBottomOf="@+id/footer_phieudatban"
            app:layout_constraintEnd_toEndOf="@+id/footer_phieudatban"
            app:layout_constraintTop_toTopOf="@+id/footer_phieudatban" />
