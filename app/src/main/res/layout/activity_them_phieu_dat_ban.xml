                <TextView
                    android:id="@+id/tv_thoigiannhan_phieudatban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_thoigiannhan"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
                    app:layout_constraintTop_toBottomOf="@+id/inputlayout_sdt_phieudatban" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/thoigiannhan_phieudatban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
                    app:layout_constraintTop_toBottomOf="@+id/tv_thoigiannhan_phieudatban">

                    <EditText
                        android:id="@+id/et_thoigiannhan_phieudatban"
                        android:layout_width="320dp"
                        android:layout_height="48dp"
                        android:focusable="false"
                        android:background="@drawable/bg_edittext"
                        app:layout_constraintBottom_toBottomOf="@+id/thoigiannhan_phieudatban"
                        app:layout_constraintStart_toStartOf="@+id/thoigiannhan_phieudatban"
                        app:layout_constraintTop_toTopOf="@+id/thoigiannhan_phieudatban" />

                    <ImageButton
                        android:id="@+id/imgbtn_thoigiannhan_themphieudatban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintEnd_toEndOf="@+id/thoigiannhan_phieudatban"
                        app:layout_constraintStart_toEndOf="@id/et_thoigiannhan_phieudatban"
                        app:layout_constraintTop_toTopOf="@+id/thoigiannhan_phieudatban" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_thoigiantra_phieudatban"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_thoigiantra"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
                    app:layout_constraintTop_toBottomOf="@+id/thoigiannhan_phieudatban" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/thoigiantra_phieudatban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
                    app:layout_constraintTop_toBottomOf="@+id/tv_thoigiantra_phieudatban">

                    <EditText
                        android:id="@+id/et_thoigiantra_phieudatban"
                        android:layout_width="320dp"
                        android:layout_height="48dp"
                        android:focusable="false"
                        android:background="@drawable/bg_edittext"
                        app:layout_constraintBottom_toBottomOf="@+id/thoigiantra_phieudatban"
                        app:layout_constraintStart_toStartOf="@+id/thoigiantra_phieudatban"
                        app:layout_constraintTop_toTopOf="@+id/thoigiantra_phieudatban" />

                    <ImageButton
                        android:id="@+id/imgbtn_thoigiantra_themphieudatban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        android:src="@drawable/ic_calendar"
                        app:layout_constraintEnd_toEndOf="@+id/thoigiantra_phieudatban"
                        app:layout_constraintStart_toEndOf="@id/et_thoigiantra_phieudatban"
                        app:layout_constraintTop_toTopOf="@+id/thoigiantra_phieudatban" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chonban_phieunhanban"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/thoigiantra_phieudatban">

                    <ImageButton
                        android:id="@+id/themban_phieunhanban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="15dp"
                        android:src="@drawable/ic_additem"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/chonban_phieunhanban"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/tv_ban_phieunhanban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhấn để chọn phòng"
                        android:textSize="20dp"
                        app:layout_constraintBottom_toBottomOf="@+id/chonban_phieunhanban"
