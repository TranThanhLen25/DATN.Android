<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemNhanVien_Activity">

    <include
        android:id="@+id/toolbar_nhanVien"
        layout="@layout/activity_appar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scr_nhanVien"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/footer_nhanVien"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_nhanVien">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nhanVien"
            android:layout_width="match_parent"
            android:layout_height="0dp"

android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/scr_nhanVien">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headdernhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@id/nhanVien"
                app:layout_constraintStart_toStartOf="@id/nhanVien"
                app:layout_constraintTop_toTopOf="@+id/nhanVien">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/chitietheadernhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="@id/headdernhanVien"
                    app:layout_constraintTop_toTopOf="@+id/headdernhanVien">

                    <TextView
                        android:id="@+id/tv_nhanVien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_tenphieu"
                        android:padding="10dp"
                        android:text="Thêm nhân viên"
                        android:textSize="@dimen/heading_2"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@id/chitietheadernhanVien"
                        app:layout_constraintTop_toTopOf="@id/chitietheadernhanVien" />




                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainnhanVien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                app:layout_constraintEnd_toEndOf="@id/nhanVien"
                app:layout_constraintStart_toStartOf="@id/nhanVien"
                app:layout_constraintTop_toBottomOf="@id/headdernhanVien">

                <TextView
                    android:id="@+id/tv_hoten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Họ và tên"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/mainnhanVien"
                    app:layout_constraintTop_toTopOf="@+id/mainnhanVien" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_hoten_nhanVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_hoten">

                    <EditText
                        android:id="@+id/et_hoten_nhanVien"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="0dp"
                        android:inputType="text"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_cccd_nhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/tv_cccd"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainnhanVien"
                    app:layout_constraintTop_toBottomOf="@+id/inputlayout_hoten_nhanVien" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_cccd_nhanVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:counterEnabled="true"
                    app:boxBackgroundMode="outline"
                    app:counterMaxLength="12"
                    app:layout_constraintTop_toBottomOf="@+id/tv_cccd_nhanVien">

                    <EditText
                        android:id="@+id/et_cccd_nhanVien"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="number"
                        android:maxLength="12"
                        android:maxLines="1"
                        android:padding="0dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_sdt_nhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/tv_sdt"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainnhanVien"
                    app:layout_constraintTop_toBottomOf="@+id/inputlayout_cccd_nhanVien" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_sdt_nhanVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="10"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sdt_nhanVien">

                    <EditText
                        android:id="@+id/et_sdt_nhanVien"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="0dp"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:ignore="SpeakableTextPresentCheck"
                        tools:layout_editor_absoluteX="0dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/inputlayout_sdt_nhanVien"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/rdo_gioitinh">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_gt"
                        android:text="Giới tính:"
                        android:padding="8dp"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints" />
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/tv_gt"

                        tools:ignore="MissingConstraints">
                        <RadioButton
                            android:id="@+id/nam"
                            android:text="Nam"
                            android:checked="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                        <RadioButton
                            android:id="@+id/nu"
                            android:text="Nữ"

                            android:layout_marginStart="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <RadioButton
                            android:id="@+id/khac"
                            android:text="Khác"
                            android:layout_marginStart="30dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RadioGroup>



                </androidx.constraintlayout.widget.ConstraintLayout>


                <TextView
                    android:id="@+id/tv_qq_nhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Địa chỉ"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainnhanVien"
                    app:layout_constraintTop_toBottomOf="@+id/rdo_gioitinh" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_qq_nhanVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="50"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintTop_toBottomOf="@+id/tv_qq_nhanVien">

                    <EditText
                        android:id="@+id/et_qq_nhanVien"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="0dp"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:ignore="SpeakableTextPresentCheck"
                        tools:layout_editor_absoluteX="0dp" />
                </com.google.android.material.textfield.TextInputLayout>




                <TextView
                    android:id="@+id/tv_tk_nhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Tài khoản"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainnhanVien"
                    app:layout_constraintTop_toBottomOf="@+id/inputlayout_qq_nhanVien" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_tk_nhanVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="16"
                    app:boxBackgroundMode="outline"
                    app:layout_constraintTop_toBottomOf="@+id/tv_tk_nhanVien">

                    <EditText
                        android:id="@+id/et_tk_nhanVien"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:padding="0dp"
                        android:maxLength="16"
                        app:layout_constraintTop_toBottomOf="parent"
                        tools:ignore="SpeakableTextPresentCheck"
                       />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/tv_mk_nhanVien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Mật khẩu"
                    android:textColor="@color/black"

                    app:layout_constraintStart_toStartOf="@+id/mainnhanVien"
                    app:layout_constraintTop_toBottomOf="@+id/inputlayout_tk_nhanVien" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/inputlayout_mk_nhanVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:counterEnabled="true"
                    app:counterMaxLength="16"
                    app:boxBackgroundMode="outline"
                    app:passwordToggleEnabled="true"
                    app:layout_constraintTop_toBottomOf="@+id/tv_mk_nhanVien">

                    <EditText
                        android:id="@+id/et_mk_nhanVien"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:maxLength="16"
                        android:padding="0dp"
                        android:inputType="textPassword"
                        app:layout_constraintTop_toBottomOf="parent"

                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footer_nhanVien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_nhahang_khachsan"
        android:padding="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_themnhanVien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Thêm"
            app:layout_constraintBottom_toBottomOf="@+id/footer_nhanVien"
            app:layout_constraintEnd_toEndOf="@+id/footer_nhanVien"
            app:layout_constraintTop_toTopOf="@+id/footer_nhanVien" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>