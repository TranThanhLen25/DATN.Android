<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityThemHangHoa">

    <include
        android:id="@+id/toolbar_phieudatban"
        layout="@layout/activity_appar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headderphieudatban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_phieudatban">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/chitietheaderphieudatban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@id/headderphieudatban"
            app:layout_constraintTop_toTopOf="@+id/headderphieudatban">

            <TextView
                android:id="@+id/tv_phieudatban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tenphieu"
                android:padding="10dp"
                android:text="Phiếu đặt bàn"
                android:textSize="@dimen/heading_2"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/chitietheaderphieudatban"
                app:layout_constraintTop_toTopOf="@id/chitietheaderphieudatban" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tv_sochungtu_phieudatban"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/chitietheaderphieudatban"
                app:layout_constraintTop_toBottomOf="@id/tv_phieudatban" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainphieudatban"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headderphieudatban">

        <TextView
            android:id="@+id/tv_hoten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Tên hàng hóa"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
            app:layout_constraintTop_toTopOf="@+id/mainphieudatban" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputlayout_hoten_phieudatban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_hoten">

            <EditText
                android:id="@+id/et_tenhanghoa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:padding="0dp"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_cccd_phieudatban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Mã hàng hóa"
            android:textColor="@color/black"

            app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
            app:layout_constraintTop_toBottomOf="@+id/inputlayout_hoten_phieudatban" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputlayout_cccd_phieudatban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_cccd_phieudatban">

            <EditText
                android:id="@+id/et_mahanghoa"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:maxLength="12"
                android:maxLines="1"
                android:padding="0dp"
                app:layout_constraintTop_toTopOf="parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tv_sdt_phieudatban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Đơn giá"
            android:textColor="@color/black"

            app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
            app:layout_constraintTop_toBottomOf="@+id/inputlayout_cccd_phieudatban" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputlayout_sdt_phieudatban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sdt_phieudatban">

            <EditText
                android:id="@+id/et_dongia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edittext"
                android:inputType="number"
                android:maxLength="10"
                android:padding="0dp"
                app:layout_constraintTop_toBottomOf="parent"
                tools:layout_editor_absoluteX="0dp" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/tv_loai_hang_hoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Đơn giá"
            android:textColor="@color/black"

            app:layout_constraintStart_toStartOf="@+id/mainphieudatban"
            app:layout_constraintTop_toBottomOf="@+id/inputlayout_sdt_phieudatban" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_loai_hang_hoa"
            android:hint="Nhấn để chọn"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
            <AutoCompleteTextView
                android:id="@+id/autoComplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"/>


        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_xacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Thêm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>