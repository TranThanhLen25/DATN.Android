<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Chitiet_PhieuThu">

    <include
        android:id="@+id/toolbar_thanhtoan"
        layout="@layout/activity_appar_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_tenPhieu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_tenphieu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_thanhtoan">

        <TextView
            android:id="@+id/tv_tenphieu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Phiếu thu chi tiết"
            android:textSize="@dimen/heading_2"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_sct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_tenPhieu">

        <TextView
            android:id="@+id/tv_sctt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số chứng từ: "
            android:textColor="@color/black"
            android:textSize="@dimen/heading_2"
            app:layout_constraintStart_toStartOf="@id/ctl_sct"
            app:layout_constraintTop_toTopOf="@id/ctl_sct" />

        <TextView
            android:id="@+id/tv_sochungtutt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="TT01"
            android:textColor="@color/red"
            android:textSize="@dimen/heading_2"
            app:layout_constraintStart_toEndOf="@id/tv_sctt"
            app:layout_constraintTop_toTopOf="@id/ctl_sct"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_ngay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_sct">

        <TextView
            android:id="@+id/tv_ngay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày: "
            android:textColor="@color/black"
            android:textSize="@dimen/heading_2"
            app:layout_constraintStart_toStartOf="@id/ctl_ngay"
            app:layout_constraintTop_toTopOf="@id/ctl_ngay" />

        <TextView
            android:id="@+id/tv_ngaylaptt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="25/06/2023"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_2"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/tv_ngay"
            app:layout_constraintTop_toTopOf="@id/ctl_ngay"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_ngay">

        <TextView
            android:id="@+id/tv_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán: "
            android:textColor="@color/black"
            android:textSize="@dimen/heading_2"
            app:layout_constraintStart_toStartOf="@id/ctl_pt"
            app:layout_constraintTop_toTopOf="@id/ctl_pt" />

        <TextView
            android:id="@+id/tv_phuongthuc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Tiền mặt"
            android:textColor="@color/black"
            android:textSize="@dimen/heading_2"
            android:textStyle="italic"
            app:layout_constraintStart_toEndOf="@id/tv_pt"
            app:layout_constraintTop_toTopOf="@id/ctl_pt"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/viewtt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ctl_pt" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_tt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewtt">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_thanhtoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/ctl_tt"
            app:layout_constraintTop_toTopOf="@id/ctl_tt">

            <TextView
                android:id="@+id/tv_thanhtoan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền cần thanh toán"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_3"
                app:layout_constraintStart_toStartOf="@id/ctl_thanhtoan"
                app:layout_constraintTop_toTopOf="@id/ctl_thanhtoan" />

            <TextView
                android:id="@+id/et_thanhtoantt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1000000"
                android:textSize="@dimen/heading_2"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                app:layout_constraintStart_toStartOf="@id/ctl_thanhtoan"
                app:layout_constraintTop_toBottomOf="@id/tv_thanhtoan"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_dua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="@id/ctl_tt"
            app:layout_constraintTop_toBottomOf="@id/ctl_thanhtoan"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_dua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền khách đưa"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_3"
                app:layout_constraintStart_toStartOf="@id/ctl_dua"
                app:layout_constraintTop_toTopOf="@id/ctl_dua" />

            <TextView
                android:id="@+id/et_duatt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:paddingStart="10dp"
                android:text="100000"
                android:textSize="@dimen/heading_2"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:padding="5dp"
                android:background="@drawable/bg_edittext"
                app:layout_constraintEnd_toEndOf="@id/ctl_dua"
                app:layout_constraintStart_toStartOf="@id/ctl_dua"
                app:layout_constraintTop_toBottomOf="@id/tv_dua"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_thoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/ctl_tt"
            app:layout_constraintTop_toBottomOf="@id/ctl_dua"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_thoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền thối lại"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_3"
                app:layout_constraintStart_toStartOf="@id/ctl_thoi"
                app:layout_constraintTop_toTopOf="@id/ctl_thoi" />

            <TextView
                android:id="@+id/tv_thoinewtt"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textSize="@dimen/heading_2"
                android:textColor="@color/black"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="@id/ctl_thoi"
                app:layout_constraintStart_toStartOf="@id/ctl_thoi"
                app:layout_constraintTop_toBottomOf="@id/tv_thoi"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_ghichu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toStartOf="@id/ctl_tt"
            app:layout_constraintTop_toBottomOf="@id/ctl_thoi"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tv_gc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú:"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="@id/ctl_ghichu"
                app:layout_constraintTop_toTopOf="@id/ctl_ghichu"
                tools:ignore="TextSizeCheck" />

            <TextView
                android:id="@+id/et_ghichutt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:background="@drawable/bg_edittext"
                android:inputType="text"
                android:text="Nhà hàng phục vụ tốt lắm"
                android:textColor="@color/black"
                android:paddingStart="10dp"
                android:maxLength="50"
                android:maxLines="3"
                app:layout_constraintEnd_toEndOf="@id/ctl_ghichu"
                app:layout_constraintStart_toStartOf="@id/ctl_ghichu"
                app:layout_constraintTop_toBottomOf="@id/tv_gc"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>