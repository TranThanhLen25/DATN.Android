<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/dialog_dangxuat"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dangxuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/dialog_dangxuat"
        android:textColor="@color/black"
        android:textSize="@dimen/heading_2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_btnDangxuat"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_dialog">

        <Button

            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đồng ý"
          android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="@id/ctl_btnDangxuat"
            app:layout_constraintEnd_toStartOf="@+id/btn_no"
            app:layout_constraintStart_toStartOf="@id/ctl_btnDangxuat"
            app:layout_constraintTop_toTopOf="@id/ctl_btnDangxuat"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:text="Trở lại"
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="@id/ctl_btnDangxuat"
            app:layout_constraintEnd_toEndOf="@id/ctl_btnDangxuat"
            app:layout_constraintStart_toEndOf="@+id/btn_yes"

            app:layout_constraintTop_toTopOf="@id/ctl_btnDangxuat"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>